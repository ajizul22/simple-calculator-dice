<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3b2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simple_project_app"
        android:textColor="#41584b"
        android:textStyle="bold"
        android:textSize="30sp"
        android:letterSpacing="0.1"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_to_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-light"
        android:padding="15dp"
        android:letterSpacing="0.1"
        android:textColor="#41584b"
        android:background="#ffe0d8"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        />
    <Button
        android:id="@+id/btn_to_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dice"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-light"
        android:padding="15dp"
        android:letterSpacing="0.1"
        android:textColor="#41584b"
        android:background="#ffe0d8"
        app:layout_constraintTop_toTopOf="@id/btn_to_calculator"
        app:layout_constraintLeft_toRightOf="@id/btn_to_calculator"
        android:layout_marginStart="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>